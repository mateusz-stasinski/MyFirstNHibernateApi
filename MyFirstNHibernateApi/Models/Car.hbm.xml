<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="MyFirstNHibernateApi.Models" assembly="MyFirstNHibernateApi">

	<class name="Car" table="Car">

		<id name="Id">
			<column name="Id" sql-type="uniqueidentifier" not-null="true"/>
			<generator class="guid" />
		</id>

		<many-to-one name="Model" column="Model" class="CarModel" not-null="true"/>

		<property name="YearOfProduction" />
		
		<property name="RegistrationNumber">
			<column name="RegistrationNumber" length="8" not-null="true" />
		</property>

		<set name="CarModels" table="CarModel">
			<key column="Model" not-null="true"/>
			<one-to-many class="CarModel"/>
		</set>
		
	</class>

</hibernate-mapping>